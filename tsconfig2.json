{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES2020",
        "target": "ES6",
        "declaration": true,
        "declarationDir": "./declarations",
        "stripInternal": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}
